{
    "name": "sitegeist/editor-widgets",
    "type": "typo3-cms-extension",
    "homepage": "https://github.com/sitegeist/editor-widgets",
    "license": [
        "GPL-2.0-or-later"
    ],
    "keywords": [
        "typo3",
        "typo3-extension",
        "dashboard",
        "widget"
    ],
    "description": "Collection of useful dashboard widgets for TYPO3",
    "authors": [
        {
            "name": "Benjamin Tammling",
            "email": "extensions@sitegeist.de",
            "role": "Developer",
            "homepage": "https://www.sitegeist.de"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "typo3/cms-core": "^11.5 || ^12.4",
        "typo3/cms-dashboard": "^11.5 || ^12.4"
    },
    "autoload": {
        "psr-4": {
            "Sitegeist\\EditorWidgets\\": "Classes"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "editor_widgets"
        }
    },
    "scripts": {
        "prepare-release": [
            "rm -r .github .ecrc .editorconfig .gitattributes Build Tests"
        ]
    },
    "suggest": {
        "typo3/cms-linkvalidator": "Broken links widget shows links found by LinkValidator"
    }
}
